{
  "version": 2,
  "name": "al-safa-global-website",
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "installCommand": "cd client && npm install"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/sitemap.xml",
      "dest": "client/public/sitemap.xml"
    },
    {
      "src": "/robots.txt",
      "dest": "client/public/robots.txt"
    },
    {
      "src": "/manifest.json",
      "dest": "client/public/manifest.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "client/public/favicon.ico"
    },
    {
      "src": "/logo192.png",
      "dest": "client/public/logo192.png"
    },
    {
      "src": "/logo512.png",
      "dest": "client/public/logo512.png"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server/index.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 